{
  // Theme
  "workbench.colorTheme": "Night Owl (No Italics)",
  "workbench.preferredDarkColorTheme": "Night Owl (No Italics)",
  "workbench.preferredLightColorTheme": "Night Owl Light (No Italics)",
  "workbench.iconTheme": "material-icon-theme",
  "editor.fontFamily": "Consolas, Courier New, Microsoft JhengHei, monospace",
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss06', 'zero'",
  "editor.fontSize": 14,
  "editor.suggestLineHeight": 24,
  "editor.tabSize": 2,
  "window.zoomLevel": 1,

  // Clean setting
  "editor.accessibilitySupport": "off",
  "editor.codeLens": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.detectIndentation": false,
  "editor.emptySelectionClipboard": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.unicodeHighlight.nonBasicASCII": false,
  "window.newWindowDimensions": "inherit",
  "workbench.editor.enablePreview": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  "files.insertFinalNewline": true,

  // Control the Blocks Visible
  "workbench.activityBar.visible": true,
  "workbench.sideBar.location": "left",
  "workbench.editor.showTabs": true,
  "workbench.statusBar.visible": true,
  "editor.guides.indentation": true,
  "editor.minimap.enabled": true,
  "window.menuBarVisibility": "toggle",
  "explorer.openEditors.visible": 0,

  // Silence the Noise
  "workbench.startupEditor": "none",
  "editor.matchBrackets": "always",
  "editor.lightbulb.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.renderLineHighlight": "none",
  "editor.renderControlCharacters": false,
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "workbench.tips.enabled": false,
  "git.decorations.enabled": false,
  "scm.diffDecorations": "all",
  "problems.decorations.enabled": true,

  // Editor
  "editor.wordWrap": "on",
  "editor.mouseWheelZoom": false,
  "editor.tabCompletion": "onlySnippets",
  "editor.suggest.localityBonus": true,
  "editor.inlineSuggest.enabled": true,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true,
    "source.organizeImports": false
  },
  "workbench.editor.closeEmptyGroups": true,
  "workbench.editor.restoreViewState": false,
  "workbench.editor.scrollToSwitchTabs": true,
  "workbench.editor.untitled.hint": "hidden",
  "workbench.layoutControl.enabled": false,
  "telemetry.telemetryLevel": "crash",

  // Code
  // Include "-" in word selection.
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  "files.associations": {
    "*.css": "tailwindcss",
    ".php_cs": "php",
    ".php_cs.dist": "php"
  },

  // Find
  "search.useIgnoreFiles": false,
  "search.exclude": {
    // Hide everything in /vendor, except the "laravel" "livewire" and "inertiajs" folder.
    "**/vendor/{[^li],?[^ain]}*": true,
    // Hide everything in /public, except "index.php"
    "**/public/{[^i],?[^n]}*": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/_ide_helper.php": true,
    "**/composer.lock": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/pnpm-lock.yaml": true,
    "**/auto-imports.d.ts": true,
    "**/components.d.ts": true,
    "**/.eslintrc-auto-import.json": true,
    "storage": true,
    ".phpunit.result.cache": true
  },

  // Terminal
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.windowsEnableConpty": false,
  "terminal.integrated.enableMultiLinePasteWarning": false,

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.enableCommitSigning": false,

  // Emmet
  "emmet.triggerExpansionOnTab": true,
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.excludeLanguages": [],

  // CSS
  "css.validate": false,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    "enter-active-class",
    "enter-from-class",
    "enter-to-class",
    "leave-active-class",
    "leave-from-class",
    "leave-to-class"
  ],
  "tailwindCSS.includeLanguages": {
    "markdown": "html"
  },
  "windicss.includeLanguages": {
    "markdown": "html"
  },
  "unocss.underline": false,

  // Javascript
  "javascript.updateImportsOnFileMove.enabled": "never",

  // Vue
  "volar.icon.preview": false,
  "volar.icon.splitEditors": false,
  "volar.completion.preferredTagNameCase": "pascal",

  // PHP
  "php.suggest.basic": false,
  "php.validate.executablePath": "C:/laragon/bin/php/php-8.1.8-Win32-vs16-x64/php.exe",
  "namespaceResolver.sortAlphabetically": true,
  "better-phpunit.commandSuffix": "--no-coverage --no-logging",
  "better-pest.commandSuffix": "--no-coverage --no-logging",

  // Markdown
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },

  // Extensions
  "liveServer.settings.donotShowInfoMsg": true,
  "errorLens.enabledDiagnosticLevels": [
    "warning",
    "error"
  ],
  "errorLens.excludeBySource": [
    "cSpell",
    "Grammarly",
    "eslint"
  ],
  "cSpell.enabled": false,
  "cSpell.language": "en,en-US,lorem",
  "cSpell.allowCompoundWords": true,
  "cSpell.userWords": [
    "Aegisub",
    "caniuse",
    "demi",
    "Ecommerce",
    "esbuild",
    "floatingui",
    "Icones",
    "Ic√¥nes",
    "Iconify",
    "iframe",
    "inertiajs",
    "Noto",
    "Nuxt",
    "qrcode",
    "Rollup",
    "unocss",
    "unplugin",
    "Vite",
    "vitepress",
    "vueuse",
    "wsrun"
  ],
  "cSpell.ignorePaths": [
    ".git",
    ".vscode",
    ".vscode-insiders",
    "vscode-extension",
    "vendor",
    "node_modules",
    "dist",
    "_ide_helper.php",
    "composer.lock",
    "package-lock.json",
    "yarn.lock",
    "pnpm-lock.yaml",
    "auto-imports.d.ts",
    "components.d.ts",
    ".eslintrc-auto-import.json"
  ]
}
